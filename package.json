{
    "name": "@helios-lang/uplc",
    "version": "0.1.19",
    "description": "Cardano Untyped Plutus Core utility library",
    "main": "src/index.js",
    "exports": {
        ".": "./src/index.js",
        "./v1": "./src/v1/index.js",
        "./v2": "./src/v2/index.js",
        "./v3": "./src/v3/index.js"
    },
    "type": "module",
    "scripts": {
        "build": "npm test",
        "clean": "find src/ -name *.d.ts* | xargs rm -f",
        "postpublish": "npm run clean",
        "prebuild": "npm run clean && npx tsc -p jsconfig.json --noEmit false --emitDeclarationOnly",
        "prepare": "npm run build",
        "prettify": "npx prettier . --write",
        "test": "npm run test:pretty && npm run test:types && npm run test:suite",
        "test:pretty": "npx prettier . --check",
        "test:suite": "node --test  --experimental-test-coverage",
        "test:types": "npx tsc -p jsconfig.json --noEmit"
    },
    "author": "Christian Schmitz",
    "license": "BSD-3-Clause",
    "devDependencies": {
        "@types/node": "^20.11.24",
        "prettier": "^3.1.0",
        "typescript": "^5.3.2"
    },
    "dependencies": {
        "@helios-lang/cbor": "^0.1.9",
        "@helios-lang/codec-utils": "^0.1.24",
        "@helios-lang/compiler-utils": "^0.1.20",
        "@helios-lang/crypto": "^0.1.3",
        "@helios-lang/type-utils": "^0.1.8"
    },
    "prettier": {
        "trailingComma": "none",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": false
    }
}
